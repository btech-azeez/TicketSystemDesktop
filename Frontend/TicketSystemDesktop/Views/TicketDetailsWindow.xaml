<Window x:Class="TicketSystemDesktop.Views.TicketDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ticket Details" Height="750" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Column="0" Margin="0,0,30,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="lblTicketNumber" FontSize="14" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,10"/>
            <TextBlock x:Name="lblSubject" FontSize="24" FontWeight="ExtraBold" Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap" Margin="0,0,0,25"/>

            <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,30">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.05"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Description" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>
                    <TextBlock x:Name="txtDescription" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap" LineHeight="22"/>
                </StackPanel>
            </Border>

            <!-- Tabs for History and Comments -->
            <TabControl Grid.Row="2" Background="Transparent" BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="border" BorderThickness="0,0,0,3" Margin="0,0,20,0" Padding="10,10">
                                        <ContentPresenter ContentSource="Header" TextBlock.FontSize="14" TextBlock.FontWeight="SemiBold"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="Activity History">
                    <DataGrid x:Name="dgHistory" Margin="0,20,0,0" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding ChangedDate, StringFormat='{}{0:MMM dd, HH:mm}'}" Width="130"/>
                            <DataGridTextColumn Header="Action By" Binding="{Binding ChangedByName}" Width="150"/>
                            <DataGridTextColumn Header="New Status" Binding="{Binding NewStatus}" Width="120"/>
                            <DataGridTextColumn Header="Comments" Binding="{Binding Comments}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Comments">
                    <DataGrid x:Name="dgComments" Margin="0,20,0,0" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding CommentDate, StringFormat='{}{0:MMM dd, HH:mm}'}" Width="130"/>
                            <DataGridTextColumn Header="By" Binding="{Binding CommentedByName}" Width="150"/>
                            <DataGridTextColumn Header="Message" Binding="{Binding CommentText}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Sidebar Actions -->
        <StackPanel Grid.Column="1">
            <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,25">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.05"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Ticket Info" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                    
                    <Label Content="PRIORITY"/>
                    <TextBlock x:Name="lblPriority" FontSize="14" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <Label Content="STATUS"/>
                    <TextBlock x:Name="lblStatus" FontSize="14" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <Label Content="CREATED"/>
                    <TextBlock x:Name="lblCreatedDate" FontSize="14" Margin="0,0,0,15"/>
                    
                    <Label Content="ASSIGNED TO"/>
                    <TextBlock x:Name="lblAssignedTo" FontSize="14" Margin="0,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Actions Panel -->
            <Border x:Name="pnlAdminActions" Visibility="Collapsed" Background="White" CornerRadius="12" Padding="25">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.05"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Management" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                    
                    <Label Content="ASSIGN TO"/>
                    <ComboBox x:Name="cboAssignTo" DisplayMemberPath="FullName" Margin="0,5,0,15"/>
                    
                    <Label Content="SET STATUS"/>
                    <ComboBox x:Name="cboStatus" Margin="0,5,0,15">
                        <ComboBoxItem Content="Open"/>
                        <ComboBoxItem Content="In Progress"/>
                        <ComboBoxItem Content="Closed"/>
                    </ComboBox>
                    
                    <Label Content="ADD INTERNAL NOTE"/>
                    <TextBox x:Name="txtAdminComment" Height="80" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,5,0,15"/>
                    
                    <Button x:Name="btnSave" Content="Update Ticket" Height="40" Click="BtnSave_Click"/>
                </StackPanel>
            </Border>

            <Border x:Name="pnlUserComment" Visibility="Collapsed" Background="White" CornerRadius="12" Padding="25">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.05"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Add Comment" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                    <TextBox x:Name="txtUserComment" Height="100" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,5,0,15"/>
                    <Button x:Name="btnAddComment" Content="Post Comment" Height="40" Click="BtnAddComment_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
